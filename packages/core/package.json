{
  "name": "@weixin-sdk/core",
  "version": "0.1.0-beta.0",
  "description": "微信 SDK 共享核心模块 - HTTP 客户端、签名、加解密、错误处理",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "wechat",
    "weixin",
    "core",
    "sdk",
    "微信"
  ],
  "author": "Lin Lou <lin.lou@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loulin/wechat.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/loulin/wechat/issues"
  },
  "homepage": "https://github.com/loulin/wechat/tree/main/packages/core#readme",
  "devDependencies": {
    "@weixin-sdk/eslint-config": "workspace:*",
    "@weixin-sdk/tsconfig": "workspace:*",
    "@types/node": "^25.0.3",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
