{
  "name": "@weixin-sdk/auth",
  "version": "0.1.0-beta.0",
  "description": "微信 OAuth 认证 Express 中间件（基于 Passport.js）",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "wechat",
    "weixin",
    "auth",
    "oauth",
    "passport",
    "express",
    "middleware",
    "微信",
    "认证"
  ],
  "author": "Lin Lou <lin.lou@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loulin/wechat.git",
    "directory": "packages/auth"
  },
  "bugs": {
    "url": "https://github.com/loulin/wechat/issues"
  },
  "homepage": "https://github.com/loulin/wechat/tree/main/packages/auth#readme",
  "dependencies": {
    "@weixin-sdk/core": "workspace:*"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0"
  },
  "devDependencies": {
    "@weixin-sdk/eslint-config": "workspace:*",
    "@weixin-sdk/tsconfig": "workspace:*",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "express": "^4.21.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
