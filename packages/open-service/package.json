{
  "name": "@weixin-sdk/open-service",
  "version": "0.1.0-beta.0",
  "description": "微信开放平台第三方平台服务 SDK，提供缓存、分布式锁和 API 集成",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "wechat",
    "weixin",
    "open-platform",
    "third-party",
    "cache",
    "redis",
    "微信",
    "开放平台",
    "第三方平台"
  ],
  "author": "Lin Lou <lin.lou@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loulin/wechat.git",
    "directory": "packages/open-service"
  },
  "bugs": {
    "url": "https://github.com/loulin/wechat/issues"
  },
  "homepage": "https://github.com/loulin/wechat/tree/main/packages/open-service#readme",
  "dependencies": {
    "@weixin-sdk/core": "workspace:*",
    "@weixin-sdk/open": "workspace:*",
    "@keyv/valkey": "^1.0.11",
    "cache-manager": "^7.2.7",
    "debug": "^4.4.0",
    "ioredis": "^5.8.2",
    "keyv": "^5.3.3",
    "passport-wechat": "^2.0.4",
    "wechat-api": "^1.35.1",
    "wechat-oauth": "^1.5.0"
  },
  "devDependencies": {
    "@weixin-sdk/eslint-config": "workspace:*",
    "@weixin-sdk/tsconfig": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.3",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
