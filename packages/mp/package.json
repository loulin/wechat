{
  "name": "@weixin-sdk/mp",
  "version": "0.1.0-beta.0",
  "description": "微信公众号/服务号 API SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "wechat",
    "weixin",
    "mp",
    "official-account",
    "api",
    "微信",
    "公众号",
    "服务号"
  ],
  "author": "Lin Lou <lin.lou@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loulin/wechat.git",
    "directory": "packages/mp"
  },
  "bugs": {
    "url": "https://github.com/loulin/wechat/issues"
  },
  "homepage": "https://github.com/loulin/wechat/tree/main/packages/mp#readme",
  "dependencies": {
    "@weixin-sdk/core": "workspace:*",
    "debug": "^4.4.0"
  },
  "devDependencies": {
    "@weixin-sdk/eslint-config": "workspace:*",
    "@weixin-sdk/tsconfig": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
